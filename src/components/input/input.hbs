<div class="input">
    <label class="input__label" for="{{name}}">
        <input class="input__element 
            {{#if (and (eq type 'password') error)}}input__element_is-invalid{{/if}}
            {{#if (eq type 'file')}}input__element_type-file{{/if}}" 
            type="{{type}}" 
            name="{{name}}" 
            id="{{name}}" 
            value="{{value}}" 
            placeholder=" "
            required="{{required}}"
            maxlength="18"
            autocomplete="on"
            accept="{{#if (eq type 'file')}}image/png, image/jpeg{{/if}}"
        >
        <span class="{{#if (eq type 'file')}}input__placeholder_type-file
                {{else}}input__placeholder
            {{/if}}"
        >{{placeholder}}</span>
    </label>
    {{#if errorText}}
        <p class="input__error-text">{{errorText}}</p>
    {{/if}}
</div>
